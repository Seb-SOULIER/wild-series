{% extends 'base.html.twig' %}
{% block title %}Catégorie{% endblock %}

{% block body %}
    
    <h1>Category : {{ category.name }}</h1>
    <div class="media">
        <div class="media-body bodyshow">
        {% if programs %}
            {% for program in programs %}
                <div class="container-show">
                    <h2>Show #{{ program.id}}</h2>
                    <h3>{{ program.title}}</h3>
                    <p>{{ program.summary}}</p>
                    <a href="{{ path("program_show", {id: program.id}) }}" class="buton-show">Visualiser</a>
                </div>
            {% endfor %}
        {% else %}
            <p>Aucune série trouvée</p>
        {% endif %}
        </div>
    </div>

<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>

{% endblock %}